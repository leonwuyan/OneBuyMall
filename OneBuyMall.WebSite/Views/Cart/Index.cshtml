<!DOCTYPE html>
<html>
<head>
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <title>购物车</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="@Url.Content("~/style/css/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/style/css/helper.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/script/jquery.js")" type="text/javascript"></script>
</head>
<body>
    <div class="g-header">
        <div class="toolsbar"></div>
    </div>
    <div class="g-body">
        <div class="m-cart">
            <div class="m-header f-clear">
                <div class="m-header-logo">
                    <h1>
                        <a class="m-header-logo-link" href="/">一元夺宝</a>
                    </h1>
                </div>
                <div class="m-cart-order-steps">
                    <div class="w-step-duobao w-step-duobao-1"></div>
                </div>
            </div>
            <div class="m-cart-content">
                <div module="cart/Cart">
                    <div pro="module-holder">
                        <div class="w-loading"><b class="w-loading-ico"></b><span class="w-loading-txt">正在努力加载……</span></div>
                    </div>
                </div>
                <div tag="moduleRecommend" module="goodsRecommend/GoodsRecommend" style="margin-top:30px;"></div>
            </div>
        </div>
    </div>
    @RenderPage("~/Views/Shared/footer.cshtml")
    <script>
        $(document).ready(function () {
            $.load("cart/Cart");
        })
    </script>
</body>
</html>

