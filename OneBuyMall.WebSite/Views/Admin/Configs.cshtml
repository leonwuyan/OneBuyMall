@model  OneBuyMall.Models.Configs
<head>
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <title>后台管理</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="@Url.Content("~/style/css/admin/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/script/jquery.js")" type="text/javascript"></script>
</head>
<body>
    <span class="title">>>站点管理</span>
    <div class="content">
        @using (Html.BeginForm("SaveConfigs", "Admin", FormMethod.Post))
        {
            @Html.Hidden("id", @Model.ID)
            <table class="grid">
                <tr>
                    <td width="20%" align="center">站点名称:</td>
                    <td width="80%">@Html.TextBox("sitename", @Model.SiteName, new { style = "width:380px" })</td>
                </tr>
                <tr>
                    <td align="center">关 键 字:</td>
                    <td>@Html.TextArea("keywords", @Model.Keywords, new { style = "height:180px;width:380px" })</td>
                </tr>
                <tr>
                    <td align="center">站点描述:</td>
                    <td>@Html.TextArea("description", @Model.Desc, new { style = "height:180px;width:380px" })</td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <input type="submit" value="保存" />
                        <input type="reset" value="重置" />
                    </td>
                </tr>
            </table>
        }
    </div>
</body>