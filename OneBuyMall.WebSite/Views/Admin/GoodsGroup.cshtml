@model  OneBuyMall.Models.GoodsGroup
<head>
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <title>后台管理</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="@Url.Content("~/style/css/admin/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/script/jquery.js")" type="text/javascript"></script>
</head>
<body>
    <span class="title">>>分类管理</span>
    <div class="content">
        @using (Html.BeginForm("SaveGoodsGroup", "Admin", FormMethod.Post))
        {
            @Html.Hidden("id", @Model.ID)
            <table class="grid">
                @if(Model.ID != 0)
                {
                <tr>
                    <td width="20%" align="center">ID:</td>
                    <td width="80%">@Html.Label(Model.ID.ToString())</td>
                </tr>
                }
                <tr>
                    <td width="20%" align="center">名称:</td>
                    <td>@Html.TextBox("name", @Model.Name, new { style = "width:380px" })</td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <input type="submit" value='@(Model.ID == 0? "添加" : "保存")' />
                        <input type="reset" value="重置" />
                    </td>
                </tr>
            </table>
        }
    </div>
</body>